<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.github.xwc.view.ButtonShapeView
        android:id="@+id/buttonShape"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:shape_borderWidth="1dp"
        app:shape_default_color="#000000"
        app:shape_pressed_color="#FFFFFF"
        app:shape_roundRect_radius="30dp">

        <com.github.xwc.view.TextDrawableView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TextDrawableView"
            android:textSize="18sp"
            android:textColor="#ffffff"
            app:pressedColor="#000000" />

    </com.github.xwc.view.ButtonShapeView>



    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/test" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.github.xwc.view.ShapeView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:shape_borderWidth="3dp"
            app:shape_default_drawable="@mipmap/shapeimage"
            app:shape_type="circle">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:gravity="center"-->
                <!--android:text="shape_drawable属性\n加载图片"-->
                <!--android:textColor="#87CEEB"-->
                <!--android:textSize="15sp"-->
                <!--android:textStyle="bold" />-->

        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:id="@+id/shapeView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            app:shape_borderWidth="3dp"
            app:shape_default_drawable="@mipmap/ic_launcher"
            app:shape_polygon_side="6"
            app:shape_type="polygon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="网络图片"
                android:textColor="#87CEEB"
                android:textSize="15sp"
                android:textStyle="bold" />

        </com.github.xwc.view.ShapeView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.xwc.view.ShapeView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="left"
            app:shape_diagonal_position="bottom"
            app:shape_type="diagonal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ShapeView"
                android:textColor="#87CEEB"
                android:textSize="18sp"
                android:textStyle="bold" />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:checked="true"
                android:text="CheckBox" />

        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            app:shape_borderWidth="3dp"
            app:shape_default_drawable="@mipmap/image1"
            app:shape_polygon_side="6"
            app:shape_pressed_drawable="@mipmap/image2"
            app:shape_type="polygon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="可配置点击和默认\n2种状态的图片"
                android:textColor="#87CEEB"
                android:textSize="15sp"
                android:textStyle="bold" />

        </com.github.xwc.view.ShapeView>

    </LinearLayout>

</LinearLayout>